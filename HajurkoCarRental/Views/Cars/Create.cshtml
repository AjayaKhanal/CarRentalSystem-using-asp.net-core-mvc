@model HajurkoCarRental.Models.Car

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" mt-5">
    <div class="">
        <form enctype="multipart/form-data" asp-action="Create" method="post" class=" p-4">
            <div class="row pb-2">
                <h1 class="text-primary">Add Car </h1>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" placeholder="Enter a Car Name" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" placeholder="Enter a Model name" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label"></label>
                <input asp-for="PlateNumber" placeholder="Enter a PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" placeholder="Enter a Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" placeholder="Enter a PlateNumber" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="RentalRate" class="control-label"></label>
                <input asp-for="RentalRate" placeholder="Enter a  Rental Rate for the Car..." class="form-control" />
                <span asp-validation-for="RentalRate" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input required type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Picture"
                       class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <br>

            <div class="d-flex align-items-center gap-2">
                <input type="submit" value="Create" style="width:150px;" class="btn btn-primary " />
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Cars" style="width:150px">Back to List</a>
            </div>
        </form>

    </div>
    <div class="col-md-4">
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}