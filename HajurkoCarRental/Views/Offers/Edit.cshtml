@model HajurkoCarRental.Models.Offer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3">
    <div>
        <div>
            <div>
                <h1 class="text-primary">Edit Offer</h1>
                <hr />
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="CreatedDateTime" class="control-label"></label>
                    <input asp-for="CreatedDateTime" class="form-control" disabled />
                    <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
                </div>
                <br>
                <div class="d-flex align-items-center gap-2">
                    <button type="submit" value="Edit" class="btn btn-icon btn-primary flex-grow-1">
                        <span>
                            <i class="bi bi-save"></i>
                        </span>
                        <span>
                            Update
                        </span>
                    </button>
                    <a class="btn btn-secondary flex-grow-1 btn-icon flex-grow-1" asp-action="Index">
                        <span>
                            <i class="bi bi-backspace-fill"></i>
                        </span>
                        <span>Back To List</span>
                    </a>

                </div>
            </form>

        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}