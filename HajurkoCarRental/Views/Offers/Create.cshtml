@model HajurkoCarRental.Models.Offer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-5">
    <div class=" p-4">
        <div>
            <div class="row pb-2">
                <h1 class="text-primary">Add New Offer</h1>
                <hr />
            </div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" placeholder="Enter a title for the offer" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" placeholder="Enter a detailed description of the offer.." class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br>
                
                <br>
                <div class="d-flex align-items-center gap-3">
                    <button type="submit" class="btn-icon btn btn-primary w-150">
                        <span>
                            <i class="bi bi-plus-circle"></i>
                        </span>
                        <span>Create</span>
                    </button>
                    <a class="btn btn-secondary btn-icon w-150" style="width:150px;" asp-action="Index">
                        <span>
                            <i class="bi bi-backspace-fill"></i>
                        </span>
                        <span>
                            Back To List
                        </span>
                    </a>

                </div>
            </form>

        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}