@model HajurkoCarRental.Controllers.CarReturnsController.CarReturnInput

@{
    ViewData["Title"] = "Record Car Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-3 mt-4">
    <div>
        <form asp-action="Create">
            <div>

                <h1 class="text-primary pb-2">Record Car Returns</h1>
                <hr />

            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentalRequestId" class="control-label"></label>
                <select asp-for="RentalRequestId" class="form-control" asp-items="ViewBag.RentalRequestId"></select>
                <span asp-validation-for="RentalRequestId" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <label asp-for="FuelLevel" class="control-label"></label>
                <input type="number" asp-for="FuelLevel" placeholder="Enter a fuel Level at which the Car is Left" class="form-control" />
                <span asp-validation-for="FuelLevel" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDamaged" /> Is Damaged
                </label>
            </div>

            <br />
            <div class="d-flex align-items-center gap-3">
                <button type="submit" value="Create" class="flex-grow-1 btn btn-primary">

                    <span>
                        <i class="bi bi-plus-circle-fill"></i>
                    </span>
                    <span>
                        Submit
                    </span>
                </button>
                <a class="btn btn-secondary btn-icon flex-grow-1" asp-action="Index">
                    <span>
                        <i class="bi bi-backspace-fill"></i>
                    </span>
                    <span>
                        Back To List
                    </span>
                </a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
