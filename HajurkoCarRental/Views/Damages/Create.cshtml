@model HajurkoCarRental.Models.Damage

@{
    ViewData["Title"] = "Record Damage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="p-3 mt-4 ">
    <div>
        <form asp-action="Create">
            <div>

                <h1 class="text-primary">Record Damage</h1>
                <hr />

            </div>
            <div asp-validation-summary="ModelOnly"></div>


            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" placeholder="Enter a description regarding the damage done!!" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="d-flex align-items-center gap-2">
                <button type="submit" class="btn btn-icon flex-grow-1 btn-primary">
                    <span>
                        <i class="bi bi-cloud-upload-fill"></i>
                    </span>
                    <span>Submit</span>
                </button>
                <a class="flex-grow-1 btn-secondary btn-icon btn" asp-action="Index">
                    <span>
                        <i class="bi bi-backspace-fill"></i>
                    </span>
                    <span>
                        Back To List
                    </span>
                </a>
            </div>
        </form>


    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}